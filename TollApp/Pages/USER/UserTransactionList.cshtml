@page
@model TollApp.Pages.USER.UserTransactionListModel
@{
}
  <h1>BALANCE:@Model.result1</h1>

  <div class="col-sm-2">
            <a href="/Recharge" class="btn btn-success rounded-pill" role="button">
                <i class="fa fa-add"></i>
               recharge
            </a>
        </div>


        <table class="table">
     
   


    
            <thead>
                <tr>
                    <th scope="col">Toll Id</th>
                    <th scope="col">Toll Location</th>
                    <th scope="col">Amount</th>
                       <th scope="col">Transaction Date</th>
                    
                   

                </tr>
            </thead>
            <tbody>
                @if(Model.UserRecords1 == null || Model.UserRecords1.Count <=0)
                {
                    <tr>
                        <td>"No data found"</td>
                    </tr>
                }
                else
                {
                @foreach (var d in Model.UserRecords1)
                {
                    <tr>
                        <td>@d.Id</td>
                        <td>@d.TollLocation</td>
                        <td>@d.Amount</td>
                        <td>@d.TransactionDate</td>
                      
                    

                
                       
                    </tr>
                }
                }
            </tbody>
        </table>