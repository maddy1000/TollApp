@page "{id}"
@model TollApp.Pages.USER.EditModel
@{
}

<h4 class="text-center">Edit Toll</h4>

<form method="post">
 
     <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="@Model.MobileNumber"></label>
        <input asp-for="@Model.MobileNumber" class="form-control" />
    </div>
      <div class="form-group">
        <label asp-for="@Model.EmailId"></label>
        <input asp-for="@Model.EmailId" class="form-control" />
    </div>
  
   
    <div class="form-group">
        <label asp-for="@Model.SelectedCategoryId"></label>
        <select asp-for="@Model.SelectedCategoryId" asp-items="@Model.VehicleCategoryList" class="form-select"></select>
    </div>
        
    <div class="form-group">
        <label asp-for="@Model.VehicleNumber"></label>
        <input asp-for="@Model.VehicleNumber" class="form-control" />
    </div>

    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h4>@Html.ValidationSummary()</h4>
    </div>
  
    <div class="row gx-0">
        <button type="submit" class="col btn btn-primary me-1">SUBMIT</button>
        <a href="/USER/List" class="col btn btn-default ms-1 border-secondary">Cancel</a>
    </div>
</form>