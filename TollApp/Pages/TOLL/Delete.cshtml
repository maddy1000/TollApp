@page "{id}"
@model TollApp.Pages.TOLL.DeleteModel
@{
}
<h3>Delete Toll (@Model.Id)</h3>
<br/>
<form method="post" class="text-center">
    <div class="form-group">
        <h5>Are you sure you want to Delete User - @Model.TollId ?</h5>
    </div>
     <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
     <div>
        @if (Model.ShowButton)
        {
            <button type="submit" class="btn btn-danger col-sm-3">Delete</button>        
            <a href="/TOLL/List" class="btn btn-light col-sm-3" role="button">Cancel</a>
        }
        else
        {
            <a href="/TOLL/List" class="btn btn-primary col-sm-3" role="button">Back</a>
        }
    </div>
</form>