@page
@model TollApp.Pages.TOLL.AddModel
@{
}


<h4 class="text-center">Add New Toll</h4>



<form method="post">
 
     <div class="form-group">
        <label asp-for="@Model.TollLocation"></label>
        <input asp-for="@Model.TollLocation" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="@Model.TollDistance"></label>
        <input asp-for="@Model.TollDistance" class="form-control" />
    </div>
      <div class="form-group">
        <label asp-for="@Model.TollPrice"></label>
        <input asp-for="@Model.TollPrice" class="form-control" />
    </div>
  
   


    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h4>@Html.ValidationSummary()</h4>
    </div>
  
    <div class="row gx-0">
        <button type="submit" class="col btn btn-primary me-1">SUBMIT</button>
        <a href="/TOLL/List" class="col btn btn-default ms-1 border-secondary">Cancel</a>
    </div>
</form>